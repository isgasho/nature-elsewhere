{
  "name": "nature-elsewhere",
  "version": "0.0.0",
  "//": "[strings]",
  "description": "An isometric adventure in an idealized state of nature.",
  "keywords": [
    "game",
    "webgl",
    "isometric",
    "adventure",
    "pixel-art",
    "aseprite"
  ],
  "homepage": "https://github.com/oddoid/nature-elsewhere",
  "repository": "github:oddoid/nature-elsewhere",
  "bugs": "https://github.com/oddoid/nature-elsewhere/issues",
  "license": "GPL-3.0-only AND CC-BY-SA-4.0",
  "scripts": {
    "start": "webpack-dev-server",
    "test:unit": "NODE_ENV=development jest -c jest.config.json",
    "test": "npm -s run formatter -- -l && npm -s run build && npm -s run test:unit",
    "build": "webpack -p",
    "format": "npm -s run formatter -- --write",
    "formatter": "prettier './**/*.{css,js,json,html,md,ts}'",
    "build:atlas": "aseprite-atlas-pack --sheet src/atlas/atlas.png --data src/atlas/atlas.json assets/atlas/*.aseprite",
    "palettize": "cd assets/atlas && find -name \\*.aseprite -exec aseprite '{}' -b --palette palette.aseprite --save-as '{}' \\;"
  },
  "devDependencies": {
    "@types/jest": "24.0.19",
    "@types/webgl2": "0.0.5",
    "@types/webpack-dev-server": "3.4.0",
    "aseprite-atlas": "2.0.6",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.0.4",
    "fork-ts-checker-webpack-plugin": "1.5.1",
    "jest": "24.9.0",
    "pre-commit": "1.2.2",
    "prettier": "github:prettier/prettier#a8a3a91",
    "raw-loader": "3.1.0",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.0-beta",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.9.0"
  },
  "author": "oddoid"
}
