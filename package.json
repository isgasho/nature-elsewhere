{
  "name": "nature-elsewhere",
  "author": "niedzielski",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/rndmem/nature-elsewhere",
  "repository": "github:rndmem/nature-elsewhere",
  "bugs": "https://github.com/rndmem/nature-elsewhere/issues",
  "license": "GPL-3.0",
  "scripts": {
    "start": "webpack-dev-server --mode=development -w",
    "test": "npm run -s formatter -- -l && npm -s run build && jest",
    "build": "webpack --mode=production",
    "format": "npm -s run formatter -- --write",
    "formatter": "prettier './**/*.{json,html,md,ts}'",
    "build:textures": "aseprite -b assets/*.aseprite --filename-format '{tag} {frame}' --list-tags --list-slices --data src/assets/atlas.json --sheet-pack --inner-padding 1 --sheet src/assets/atlas.png && aseprite -b src/assets/atlas.png --palette assets/index-lut.gpl --save-as src/assets/atlas.png",
    "palettize": "cd assets && find -name \\*.aseprite -exec aseprite '{}' -b --palette palette.aseprite --save-as '{}' \\;"
  },
  "devDependencies": {
    "@types/clean-webpack-plugin": "0.1.2",
    "@types/copy-webpack-plugin": "4.4.2",
    "@types/jest": "23.3.13",
    "@types/webgl2": "0.0.4",
    "@types/webpack-dev-server": "3.1.1",
    "clean-webpack-plugin": "1.0.1",
    "copy-webpack-plugin": "4.6.0",
    "jest": "24.0.0",
    "pre-commit": "1.2.2",
    "prettier": "1.16.4",
    "raw-loader": "1.0.0",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.2",
    "typescript": "3.3.1",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14"
  }
}
