{
  "name": "nature-elsewhere",
  "author": "niedzielski",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/rndmem/nature-elsewhere",
  "repository": "github:rndmem/nature-elsewhere",
  "bugs": "https://github.com/rndmem/nature-elsewhere/issues",
  "license": "GPL-3.0",
  "scripts": {
    "start": "live-server -q src& tsc -w& wait",
    "test": "npm run -s formatter -- -l && tsc && jest",
    "format": "npm -s run formatter -- --write",
    "formatter": "prettier './**/*.{json,html,md,js,ts}'",
    "build:textures": "aseprite -b assets/*.aseprite --filename-format '{tag} {frame}' --list-tags --list-slices --data src/assets/atlas.js --sheet-pack --inner-padding 1 --sheet src/assets/atlas.png && aseprite -b src/assets/atlas.png --palette assets/index-lut.gpl --save-as src/assets/atlas.png && sed -i '1iexport default' src/assets/atlas.js",
    "palettize": "cd assets && find -name \\*.aseprite -exec aseprite '{}' -b --palette palette.aseprite --save-as '{}' \\;"
  },
  "devDependencies": {
    "@types/jest": "23.3.10",
    "@types/webgl2": "0.0.4",
    "babel-preset-env": "1.7.0",
    "jest": "23.6.0",
    "live-server": "1.2.1",
    "pre-commit": "1.2.2",
    "prettier": "1.15.3",
    "typescript": "3.2.1"
  }
}
