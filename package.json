{
  "name": "nature-elsewhere",
  "author": "rndmem",
  "version": "0.0.0",
  "//": "[strings]",
  "description": "An isometric adventure in an idealized state of nature.",
  "keywords": [
    "game",
    "webgl",
    "isometric",
    "adventure"
  ],
  "homepage": "https://github.com/rndmem/nature-elsewhere",
  "repository": "github:rndmem/nature-elsewhere",
  "bugs": "https://github.com/rndmem/nature-elsewhere/issues",
  "license": "GPL-3.0-only AND CC-BY-SA-4.0",
  "scripts": {
    "start": "webpack-dev-server",
    "test:unit": "jest -c jest.config.json",
    "test": "npm -s run formatter -- -l && npm -s run build && npm -s run test:unit",
    "build": "webpack -p",
    "format": "npm -s run formatter -- --write",
    "formatter": "prettier './**/*.{css,json,html,md,ts}'",
    "build:atlas": "aseprite -b assets/atlas/*.aseprite --filename-format '{tag} {frame}' --list-tags --data src/atlas/atlasAssets/atlas.json --sheet-pack --sheet src/atlas/atlasAssets/atlas.png",
    "palettize": "cd assets/atlas && find -name \\*.aseprite -exec aseprite '{}' -b --palette palette.aseprite --save-as '{}' \\;"
  },
  "devDependencies": {
    "@types/ajv-merge-patch": "4.1.0",
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/jest": "24.0.18",
    "@types/webgl2": "0.0.5",
    "@types/webpack-dev-server": "3.1.7",
    "ajv": "6.10.2",
    "ajv-merge-patch": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.0.4",
    "jest": "24.9.0",
    "pre-commit": "1.2.2",
    "prettier": "1.18.2",
    "raw-loader": "3.1.0",
    "ts-jest": "24.1.0",
    "ts-loader": "6.1.2",
    "ts-node": "8.4.1",
    "typescript": "3.6.3",
    "webpack": "4.40.2",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.8.1"
  }
}
