{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://natureelsewhere.com/schemas/images/Image.schema.json",
  "type": "object",
  "title": "Image",
  "deepDefaults": true,
  "properties": {
    "id": {
      "$ref": "/schemas/atlas/AtlasID.schema.json"
    },
    "bounds": {
      "$ref": "/schemas/math/Rect.schema.json",
      "default": {"x": 0, "y": 0, "w": 0, "h": 0}
    },
    "layer": {
      "$ref": "/schemas/images/Layer.schema.json",
      "default": "default"
    },
    "animator": {
      "$ref": "/schemas/images/Animator.schema.json",
      "default": {"period": 0, "exposure": 0}
    },
    "scale": {
      "$ref": "/schemas/images/ImageScale.schema.json",
      "default": {"x": 1, "y": 1}
    },
    "wrap": {
      "$ref": "/schemas/math/I16XY.schema.json",
      "default": {"x": 0, "y": 0}
    },
    "wrapVelocity": {
      "$ref": "/schemas/math/I16XY.schema.json",
      "default": {"x": 0, "y": 0}
    }
  },
  "required": ["id"],
  "additionalProperties": false
}
