  "$id": "https://natureelsewhere.com/schemas/images/ImageStateMachine.schema.json",
  "type": "object",
  "title": "ImageStateMachine",
  "deepDefaults": true,
  "properties": {
    "state": {
      "$ref": "/schemas/entities/EntityState.schema.json",
      "default": "hidden"
    },
    "map": {
      "$ref": "/schemas/images/ImageStateMap.schema.json",
