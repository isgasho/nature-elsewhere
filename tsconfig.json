{
  "compileOnSave": true,

  // .tsx files here refer to Tiled tilesets not Reactive TypeScript.
  "exclude": ["src/assets/tilesets"],

  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "outDir": "build",

    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,

    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  }
}
